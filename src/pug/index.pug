extends templates/template.pug

block variables
	//- переменная для template.pug
	- var pageTitle = "Баланс жизни начинается с пространства"
	- var pageHeading = '"Баланс" - студия дизайна жилых помещений'
	- var idPage = "index"

block main
	header.main__header
		p.main__header-title Баланс
			sup ®
		p.main__header-subtitle Баланс жизни начинается с пространства

		p.list-links
			a(href="#") Экстерьер
			a(href="#") Визуализация
			a(href="#") Интерьер
			a(href="#") Дизайн

	section
		h2.visually-hidden Последние работы

		.slider.swiper
			ul.swiper-wrapper.slider__list
				li.swiper-slide.slider__item
					img(src="./img/heder-slide-1.jpg", alt="#")
				li.swiper-slide.slider__item
					img(src="./img/heder-slide-2.jpg", alt="#")
				li.swiper-slide.slider__item
					img(src="./img/heder-slide-3.jpg", alt="#")

			button.swiper-button-prev.slider__button-prew(type="button")
			button.swiper-button-next.slider__button-next(type="button")

	section.portfolio
		p.portfolio__title Мы создаем пространства с ощущением
			span вдохновения
			span уюта
			span комфорта
		h2.portfolio__subtitle Наше портфолио - наша гордость. Потому что каждая работа сделана с душой.

		ul.portfolio__list
			li.portfolio__item
				p.list-links
					a(href="#") Интерьер
					a(href="#") Комплектация проекта
				img(src="img/portfolio/portfolio-1.jpg", alt="#")
				h3.portfolio__list-title Интерьер квартиры в жилом комплексе «колизей» для молодой пары
				a.button-arrow(href="#")
					span.visually-hidden Подробнее
			li.portfolio__item
				p.list-links
					a(href="#") Интерьер
				img(src="img/portfolio/portfolio-2.jpg", alt="#")
				h3.portfolio__list-title Интерьер квартиры в жилом комплексе «колизей» для молодой пары
				a.button-arrow(href="#")
					span.visually-hidden Подробнее
			li.portfolio__item
				p.list-links
					a(href="#") Экстерьер
				img(src="img/portfolio/portfolio-3.jpg", alt="#")
				h3.portfolio__list-title Интерьер квартиры в жилом комплексе «колизей» для молодой пары
				a.button-arrow(href="#")
					span.visually-hidden Подробнее
			li.portfolio__item
				p.list-links
					a(href="#") Интерьер
				img(src="img/portfolio/portfolio-4.jpg", alt="#")
				h3.portfolio__list-title Интерьер квартиры в жилом комплексе «колизей» для молодой пары
				a.button-arrow(href="#")
					span.visually-hidden Подробнее
			li.portfolio__item
				p.list-links
					a(href="#") Интерьер
					a(href="#") Комплектация проекта
				img(src="img/portfolio/portfolio-5.jpg", alt="#")
				h3.portfolio__list-title Интерьер квартиры в жилом комплексе «колизей» для молодой пары
				a.button-arrow(href="#")
					span.visually-hidden Подробнее
		a.button.button--big(href="#") Смотреть все работы

	section.services
		h2.visually-hidden Услуги

		p.services__content
			span.services__left Мы занимаемся
			span.services__right
				span дизайн проектами
				span визуализацией интерьера
				span визуализацией экстерьера
				span комплектацией проекта
				span авторским надзором

	section.feedback
		h2.visually-hidden Обратная связь
		form.feedback__content(action="#")
			p.feedback__title Обсудим ваш проект?
			p.feedback__subtitle Оставьте заявку и мы свяжемся с вами :)
			label Напишите своё имя
			input.feedback__input(type="text", name="name", placeholder="Ваше имя")
			label Напишите номер телефона
			input.feedback__input(type="tel", name="phone", placeholder="+7 (___) ___-__-__")
			label
				input.feedback__checkbox(type="checkbox")
				| Даю согласие на обработку персональных данных
			button.feedback__submit(type="submit") Оставить заявку

		.feedback__content
			h2.contacts__title Или, вот наши контакты
			address
				a(href="tel:+79179567889") 8 (917) 956-78-89
				a(href="mailto:balans@yandex.ru") balans@yandex.ru

			ul.soc__list
				li.soc__item
					a(href="#")
						span.visually-hidden Канал на ютубе
				li.soc__item
					a(href="#")
						span.visually-hidden Группа в вк
				li.soc__item
					a(href="#")
						span.visually-hidden Канал в телеграм

	script(src="./static/swiper/swiper-bundle.min.js")
