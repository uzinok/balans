//- gallery--revert
mixin gallery (array, MyClass)
	ul.gallery(class=MyClass == 'gallery--revert' ? 'gallery--revert' : '', class=MyClass == 'gallery--only-small' ? 'gallery--only-small' : '')
		each arr in array
			li.gallery__item
				picture
					img(src=`img/${arr[0]}/${arr[1]}.jpg`, alt=`${arr[2]}`)
				if arr[3]
					h3
						a(href=`${arr[3]}`) #{arr[4]}

mixin social(dark)
	ul.soc-list(class=dark == true ? 'soc-list--dark' : '')
		li.soc-list__item
			a.soc-list__link.soc-list__link--yt(href="#")
				span.visually-hidden Канал на ютубе
		li.soc-list__item
			a.soc-list__link.soc-list__link--vk(href="#")
				span.visually-hidden Группа в вк
		li.soc-list__item
			a.soc-list__link.soc-list__link--tg(href="#")
				span.visually-hidden Канал в телеграм

mixin list_services(array)
	ul.list-services
		each arr in array
			li.list-services__item
				.list-services__container.container
					picture.list-services__picture
						img(src=`img/${arr[8]}/${arr[9]}`, alt=`${arr[10]}`, width='466', height='345', loading='lazy')

					.list-services__content
						a(href=`${arr[1]}`)
							h3.list-services__heading #{arr[0]}
						p #{arr[2]}

						dl.list-services__dl
							div
								dt.list-services__dt стоимость
								dd.list-services__dd #{arr[3]} #[span #{arr[4]}] #{arr[5]}

							div
								dt.list-services__dt сроки выполнения
								dd.list-services__dd #[span #{arr[6]}]  #{arr[7]}
